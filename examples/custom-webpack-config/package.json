{
  "name": "@lwc-garden/example-custom-theme",
  "private": true,
  "version": "1.0.0",
  "description": "custom-theme",
  "type": "module",
  "scripts": {
    "dev": "npx @lwc-garden/core dev"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.1",
    "@lukethacoder/lwc-module-resolver": "^6.5.0",
    "@lukethacoder/lwc-webpack-plugin": "^4.3.0",
    "@lwc/babel-plugin-component": "^6.3.4",
    "@lwc/compiler": "^6.3.4",
    "@lwc/engine-dom": "^6.3.4",
    "@lwc/engine-server": "^6.3.4",
    "@lwc/synthetic-shadow": "^6.3.4",
    "@types/webpack": "^5.28.5",
    "babel-loader": "^9.1.3",
    "eslint": "^8.57.0",
    "html-webpack-plugin": "^5.6.0",
    "lwc": "^6.3.4",
    "prettier": "^3.2.5",
    "typescript": "^5.4.3",
    "webpack": "^5.91.0",
    "webpack-dev-server": "^5.0.4"
  },
  "dependencies": {
    "@lwc-garden/core": "workspace:*"
  },
  "pnpm": {
    "overrides": {
      "@lwc/module-resolver": "$@lukethacoder/lwc-module-resolver"
    }
  },
  "lint-staged": {
    "**/*.{css,html,js,json,md,yaml,yml}": [
      "prettier --write"
    ],
    "**/lwc/**/*.js": [
      "eslint --cache --fix"
    ]
  }
